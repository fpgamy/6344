clear;
clc;


%% Basic tutorial
% Load the image
I = imread('puss_in_boots.jpg');
% Convert to a double
D = double(I)/256;
% Extract luminance
lum = (I(:,:,1)+ I(:,:,2) + I(:,:,3))/3;
% histogram equalize
processed = histeq(lum);
% show result
imshow(processed);

%% Problem 8
% Get the bw image
gscale = lum;
% Quantise
qgscale = bitshift(bitshift(gscale, -7), 7);
% show result
imshow(qgscale);

% Quantise
qgscale = bitshift(bitshift(gscale, -6), 6);
% show result
imshow(qgscale);

% Quantise
qgscale = bitshift(bitshift(gscale, -4), 4);
% show result
imshow(qgscale);

% Quantise
qgscale = bitshift(bitshift(gscale, -2), 2);
% show result
imshow(qgscale);

% show result
imshow(gscale);

C = bitshift(bitshift(I, -6), 6);
imshow(C)

